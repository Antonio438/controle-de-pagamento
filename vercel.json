{
  "version": 2,
  "installCommand": "npm install --prefix api && npm install",
  "framework": null,  <-- NOVA LINHA CRUCIAL AQUI (ou use "")
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PGHOST": "@controle-de-pagamento-tau-db-host",
    "PGDATABASE": "@controle-de-pagamento-tau-db-name",
    "PGUSER": "@controle-de-pagamento-tau-db-user",
    "PGPASSWORD": "@controle-de-pagamento-tau-db-password",
    "POSTGRES_URL": "@controle-de-pagamento-tau-db-url"
  }
}